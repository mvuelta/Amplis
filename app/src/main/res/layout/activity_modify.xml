<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ItemActivity">

    <EditText
        android:id="@+id/eMarca"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/holo_green_dark"
        android:hint="Ingrese la marca"
        android:text="" />

    <EditText
        android:id="@+id/eModelo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/holo_orange_dark"
        android:hint="Ingrese el modelo"
        android:text="" />

    <EditText
        android:id="@+id/ePotencia"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/holo_blue_dark"
        android:hint="Ingrese la potencia (en Watts)"
        android:inputType="number"
        android:text="" />

    <EditText
        android:id="@+id/eDescripcion"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Ingrese una descripcion" />

    <Button
        android:id="@+id/btnModificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/eDescripcion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</LinearLayout>